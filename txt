                  {/* Duration Field */}
                  <div className="flex-1 min-w-[150px]">
                    <SelectField
                      label="Duration (Urdu)"
                      value={med.duration_urdu}
                      onChange={(val) =>
                        updateField(
                          "prescriptions",
                          index,
                          "duration_urdu",
                          val
                        )
                      }
                      options={[
                        { label: "3 ÿØŸÜ", value: "3 ÿØŸÜ" },
